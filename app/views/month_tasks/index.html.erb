<main>
  <p id="notice">
  </p>
  <div class="container px-5 px-sm-0">
    <div id="error_explanation">
      <% if @month_task.errors.any? %>
        <h3>
          <%= @month_task.errors.count %> errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @month_task.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-3">
        <h2>ユーザー情報</h2>
          <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr class="marginb">
              <th>professsion</th>
              <th><%= current_user.profession %></th>
            </tr>
          </tbody>
        </table>
        
        <h2 class="mt-3">月末までのタスク追加</h2>
        <div class="form-field">
          <%= form_with model: @month_task, local:true do |f| %>
            <div class="form-group">
              <%= f.label 'book_title', 'Name' %>
              <%= f.text_field :name, :class => 'form-control book_title' %>
            </div>
            <div class="form-group">
              <%= f.label 'book_opinion', 'Content' %>
              <%= f.text_area :content, :class => 'form-control book_body' %>
            </div>
            <div class="form-group">
              <input type="submit" name="commit" value="Create MonthTask" class="btn btn-outline-primary" data-disable-with="Create MonthTask">
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>月末までに行うタスク</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Name</th>
              <th>Content</th>
              <th colspan="3"></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @month_tasks.each do |month_task| %>
              <tr>
                <td><%= month_task.name %></td>
                <td><%= month_task.content %></td>
                <td>
                  <%= link_to("Edit", edit_month_task_path(month_task.id), class: 'btn btn-sm btn-outline-success edit_book_12089') %>
                </td>
                <td>
                  <%= link_to("Destroy", month_task_path(month_task.id), { method: :delete, data: {confirm: "本当に消しますか？"}, class: 'btn btn-sm btn-warning destroy_book_12089'})%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>