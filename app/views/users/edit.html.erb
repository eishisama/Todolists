<main>
  <p id="notice">
    
  </p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		  <h2>Editing Profile</h2>
  		  <div id="error_explanation">
          <% if @user.errors.any? %>
            <h3>
              <%= @user.errors.count %> errors prohibited this obj from being saved:
            </h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
  		  <div class="form-field">
          <%= form_with model: @user, local:true do |f| %>
            <div class="form-group">
              <%= f.label 'user_name', 'Name' %>
              <%= f.text_field :name, :class => 'form-control name' %>
            </div>
            <div class="form-group">
              <%= f.label 'user_image', 'Image' %>
              <%= f.attachment_field :profile_image, :class => 'form-control-file user_image' %>
            </div>
            <div class="form-group">
              <%= f.label 'user_introduction', 'Profession' %>
              <%= f.text_area :profession, :class => 'form-control introduction' %>
            </div>
            <div class="form-group">
              <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
            </div>
          <% end %>
        </div>
    </div>
  </div>
</main>